#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define BASE 0
#define NUM  1
#define NAV  2
#define SYS  3

&mt {
  quick-tap-ms = <100>;
  global-quick-tap;
  flavor = "tap-preferred";
  tapping-term-ms = <170>;
};

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";

        // num + nav = sys
        num_nav_sys_layer {
            if-layers = <NUM NAV>;
            then-layer = <SYS>;
        };

    };

    behaviors {

        // Tap Dance
        // double-tap LSHIFT to turn on CAPS WORD
        td_caps: td_caps_word {
            compatible = "zmk,behavior-tap-dance";
            label = "CAPDANCE";
            #binding-cells = <0>;
            tapping-term-ms = <175>;
            bindings = <&kp LSHFT>, <&caps_word>;
        };

    };

    combos {
            compatible = "zmk,combos";
            
        // qw = ESC
        esc {
            timeout-ms = <25>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };

        // as = TAB
        tab {
            timeout-ms = <25>;
            key-positions = <10 11>;
            bindings = <&kp TAB>;
        };

        // qe = ALT+F4
        altf4 {
            timeout-ms = <25>;
            key-positions = <0 2>;
            bindings = <&kp LA(F4)>;
        };

        // op = DEL
        del {
            timeout-ms = <25>;
            key-positions = <8 9>;
            bindings = <&kp DEL>;
        };

        // l; = `
        tld {
            timeout-ms = <25>;
            key-positions = <18 19>;
            bindings = <&kp GRAVE>;
        };

        // ui = (
        lpar {
            timeout-ms = <25>;
            key-positions = <6 7>;
            bindings = <&kp LPAR>;
        };
        // io = )
        rpar {
            timeout-ms = <25>;
            key-positions = <7 8>;
            bindings = <&kp RPAR>;
        };

        // jk = [
        lbkt {
            timeout-ms = <25>;
            key-positions = <16 17>;
            bindings = <&kp LBKT>;
        };
        // kl = ]
        rbkt {
            timeout-ms = <25>;
            key-positions = <17 18>;
            bindings = <&kp RBKT>;
        };

        // m, = {
        lbrc {
            timeout-ms = <25>;
            key-positions = <27 28>;
            bindings = <&kp LBRC>;
        };
        // ,. = }
        rbrc {
            timeout-ms = <25>;
            key-positions = <28 29>;
            bindings = <&kp RBRC>;
        };

    };



